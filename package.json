{
  "name": "agrc-component-monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agrc/kitchen-sink.git"
  },
  "main": "",
  "private": true,
  "devDependencies": {
    "@agrc/eslint-config": "^1.3.0",
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@storybook/addon-storyshots": "^5.3.8",
    "@storybook/addons": "^5.3.8",
    "@storybook/react": "^5.3.8",
    "babel-loader": "^8.1.0",
    "babel-plugin-require-context-hook": "^1.0.0",
    "chokidar-cli": "^2.1.0",
    "copyfiles": "^2.3.0",
    "core-js": "^3.6.5",
    "eslint": "^6.8.0",
    "esri-loader": "^2.15.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "lerna": "^3.22.1",
    "react-test-renderer": "^16.13.1",
    "regenerator-runtime": "^0.13.7"
  },
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "eslintConfig": {
    "extends": "@agrc",
    "ignorePatterns": [
      "dist/"
    ]
  },
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "lerna exec 'babel ./ --out-dir dist --root-mode upward --delete-dir-on-start --source-maps --ignore \"**/*.stories.js\",\"**/*.test.js\" && copyfiles *.svg *.css dist'",
    "test": "jest",
    "start": "chokidar \"packages/**/*.*\" \"!packages/**/dist/**/*.*\" -c \"npm run build\"",
    "link": "lerna exec -- npm link",
    "unlink": "lerna exec -- npm unlink",
    "lint": "eslint ./",
    "prepare": "npm run build",
    "release": "lerna publish --conventional-commits",
    "pre-release": "lerna publish --conventional-commits --conventional-prerelease --canary",
    "graduate": "lerna publish --conventional-commits --conventional-graduate"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.jest/register-context.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  }
}
