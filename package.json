  "repository": {
    "type": "git",
    "url": "https://github.com/agrc/kitchen-sink.git"
  },
  "main": "",
  "private": true,
  "devDependencies": {
    "@agrc/eslint-config": "^1.3.0",
    "@arcgis/core": "^4.18.1",
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-storyshots": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@vitejs/plugin-react-refresh": "^1.3.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-require-context-hook": "^1.0.0",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "chokidar-cli": "^2.1.0",
    "copy-webpack-plugin": "^8.*",
    "copyfiles": "^2.4.1",
    "core-js": "^3.12.1",
    "eslint": "^7.26.0",
    "esri-loader": "^3.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "react-test-renderer": "^17.0.2",
    "regenerator-runtime": "^0.13.7",
    "sass": "^1.32.13",
    "sass-loader": "^11.1.1",
    "vite": "^2.3.3"
  },
  "eslintConfig": {
    "extends": "@agrc",
    "ignorePatterns": [
      "dist/"
    ],
    "parser": "babel-eslint"
  },
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vite build",
    "vite:serve": "vite preview",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "lerna exec 'vite build --config ../../vite.config.js' --no-bail",
    "test": "jest --watch",
    "start": "npm run build && chokidar \"packages/**/*.*\" \"!packages/**/dist/**/*.*\" -c \"npm run build\"",
    "link:external": "lerna exec -- npm link",
    "link": "lerna link",
    "unlink:external": "lerna exec -- npm unlink",
    "lint": "lerna exec -- eslint ./",
    "release": "lerna publish --conventional-commits",
    "pre-release": "lerna publish --conventional-commits --conventional-prerelease --canary",
    "graduate": "lerna publish --conventional-commits --conventional-graduate"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  }
}
