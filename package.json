{
  "name": "agrc-component-monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agrc/kitchen-sink.git"
  },
  "main": "",
  "private": true,
  "devDependencies": {
    "@agrc/eslint-config": "^1.3.0",
    "@babel/cli": "7.8.3",
    "@babel/core": "7.8.3",
    "@babel/preset-env": "7.8.3",
    "@babel/preset-react": "7.8.3",
    "@storybook/addon-actions": "5.3.3",
    "@storybook/addon-links": "5.3.3",
    "@storybook/addon-storyshots": "5.3.3",
    "@storybook/addons": "5.3.3",
    "@storybook/preset-create-react-app": "^1.5.1",
    "@storybook/react": "5.3.3",
    "babel-loader": "8.0.6",
    "babel-plugin-require-context-hook": "1.0.0",
    "chokidar-cli": "2.1.0",
    "copyfiles": "2.1.1",
    "core-js": "3.6.4",
    "eslint": "^6.8.0",
    "esri-loader": "^2.13.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "24.9.0",
    "lerna": "^3.20.2",
    "react-test-renderer": "16.12.0",
    "regenerator-runtime": "0.13.3"
  },
  "peerDependencies": {
    "react": "^16.12.0"
  },
  "eslintConfig": {
    "extends": "@agrc",
    "ignorePatterns": [
      "dist/"
    ]
  },
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "lerna exec 'babel ./ --out-dir dist --root-mode upward --delete-dir-on-start --source-maps --ignore \"**/*.stories.js\",\"**/*.test.js\" && copyfiles *.svg *.css dist'",
    "test": "jest",
    "start": "chokidar \"packages/**/*.*\" \"!packages/**/dist/**/*.*\" -c \"npm run build\"",
    "link": "lerna exec -- npm link",
    "unlink": "lerna exec -- npm unlink",
    "lint": "eslint ./",
    "prepare": "npm run build"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/.jest/register-context.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  }
}
