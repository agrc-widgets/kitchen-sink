{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "message": "chore(release): lerna publish",
      "ignoreChanges": [
        "*.stories.js",
        "*.test.js",
        "*.md"
      ]
    },
    "version": {
      "allowBranch": [
        "master"
      ],
      "signGitCommit": true,
      "signGitTag": true
    }
  },
  "version": "independent"
}
